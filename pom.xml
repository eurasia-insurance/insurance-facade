<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>com.lapsa.maven.pom</groupId>
		<artifactId>javaee7-app-parent</artifactId>
		<version>2.0</version>
	</parent>

	<groupId>com.lapsa.insurance-lib</groupId>
	<artifactId>insurance-facade</artifactId>
	<version>3.0-SNAPSHOT</version>
	<packaging>jar</packaging>

	<name>Insurance Lib : Facade</name>

	<properties>
		<!-- APIs -->
		<insurance-lib.version>2.3-SNAPSHOT</insurance-lib.version>
		<lapsa-commons-lib.version>2.2-SNAPSHOT</lapsa-commons-lib.version>
		<qazkom-facade.version>3.0-SNAPSHOT</qazkom-facade.version>
		<!-- EJBs & WARs -->
		<insurance-dao-impl-jpa.version>2.3-SNAPSHOT</insurance-dao-impl-jpa.version>
		<insurance-jpa-unit.version>1.13-SNAPSHOT</insurance-jpa-unit.version>
		<insurance-esbd-impl-ws.version>3.1-SNAPSHOT</insurance-esbd-impl-ws.version>
		<insurance-mesenger-impl-default.version>3.1-SNAPSHOT</insurance-mesenger-impl-default.version>
	</properties>

	<dependencyManagement>
		<dependencies>
			<!-- internal insurance -->
			<dependency>
				<groupId>com.lapsa.insurance-lib</groupId>
				<artifactId>insurance-dao</artifactId>
				<version>${insurance-lib.version}</version>
			</dependency>
			<dependency>
				<groupId>com.lapsa.insurance-lib</groupId>
				<artifactId>insurance-esbd</artifactId>
				<version>${insurance-lib.version}</version>
			</dependency>
			<dependency>
				<groupId>com.lapsa.insurance-lib</groupId>
				<artifactId>insurance-mesenger</artifactId>
				<version>${insurance-lib.version}</version>
			</dependency>
			<!-- internal qazkom-facade -->
			<dependency>
				<groupId>com.lapsa.qazkom-lib</groupId>
				<artifactId>qazkom-facade</artifactId>
				<version>${qazkom-facade.version}</version>
			</dependency>
			<!-- internal lapsa-commons -->
			<dependency>
				<groupId>com.lapsa.lapsa-commons-lib</groupId>
				<artifactId>lapsa-commons</artifactId>
				<version>${lapsa-commons-lib.version}</version>
			</dependency>
			<!-- runtime -->
			<!-- internal insurance -->
			<dependency>
				<groupId>com.lapsa.insurance-lib</groupId>
				<artifactId>insurance-dao-impl-jpa</artifactId>
				<version>${insurance-dao-impl-jpa.version}</version>
				<type>ejb</type>
			</dependency>
			<dependency>
				<groupId>com.lapsa.insurance-lib</groupId>
				<artifactId>insurance-mesenger-impl-default</artifactId>
				<version>${insurance-mesenger-impl-default.version}</version>
				<type>ejb</type>
			</dependency>
			<dependency>
				<groupId>com.lapsa.insurance-lib</groupId>
				<artifactId>insurance-esbd-impl-ws</artifactId>
				<version>${insurance-esbd-impl-ws.version}</version>
				<type>ejb</type>
			</dependency>
		</dependencies>
	</dependencyManagement>

	<dependencies>
		<!-- internal -->
		<dependency>
			<groupId>com.lapsa.insurance-lib</groupId>
			<artifactId>insurance-dao</artifactId>
			<scope>compile</scope>
			<optional>true</optional>
		</dependency>
		<dependency>
			<groupId>com.lapsa.insurance-lib</groupId>
			<artifactId>insurance-esbd</artifactId>
			<scope>compile</scope>
			<optional>true</optional>
		</dependency>
		<dependency>
			<groupId>com.lapsa.insurance-lib</groupId>
			<artifactId>insurance-mesenger</artifactId>
			<scope>compile</scope>
			<optional>true</optional>
		</dependency>
		<!-- internal qazkom-facade -->
		<dependency>
			<groupId>com.lapsa.qazkom-lib</groupId>
			<artifactId>qazkom-facade</artifactId>
			<scope>compile</scope>
			<optional>true</optional>
		</dependency>
		<!-- internal lapsa-commons -->
		<dependency>
			<groupId>com.lapsa.lapsa-commons-lib</groupId>
			<artifactId>lapsa-commons</artifactId>
			<scope>compile</scope>
			<optional>true</optional>
		</dependency>
		<!-- JavaEE -->
		<dependency>
			<groupId>javax.enterprise</groupId>
			<artifactId>cdi-api</artifactId>
			<scope>provided</scope>
			<optional>true</optional>
		</dependency>
			<!-- runtime -->
			<!-- internal insurance -->
			<dependency>
				<groupId>com.lapsa.insurance-lib</groupId>
				<artifactId>insurance-dao-impl-jpa</artifactId>
				<type>ejb</type>
				<scope>runtime</scope>
			</dependency>
			<dependency>
				<groupId>com.lapsa.insurance-lib</groupId>
				<artifactId>insurance-mesenger-impl-default</artifactId>
				<type>ejb</type>
				<scope>runtime</scope>
			</dependency>
			<dependency>
				<groupId>com.lapsa.insurance-lib</groupId>
				<artifactId>insurance-esbd-impl-ws</artifactId>
				<type>ejb</type>
				<scope>runtime</scope>
			</dependency>
	
	</dependencies>

	<scm>
		<connection>scm:git:https://gitlab.lapsa.tech/lapsa/insurance/facade.git</connection>
		<developerConnection>scm:git:https://gitlab.lapsa.tech/lapsa/insurance/facade.git</developerConnection>
		<tag>HEAD</tag>
	</scm>

	<issueManagement>
		<system>gitlab</system>
		<url>https://gitlab.lapsa.tech/lapsa/insurance/facade/issues</url>
	</issueManagement>

</project>
